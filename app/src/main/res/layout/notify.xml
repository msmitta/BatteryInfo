<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="120px"
    android:padding="0dp" >

    <TextView
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bat"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:text="XX"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/bat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/c"
        android:padding="1dp"
        android:text="XX.X"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/ampe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tx_ampe"
        android:padding="1px"
        android:text="+XXXX.X"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/gpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cpu"
        android:padding="1dp"
        android:text="XX"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/tx_gpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tx_cpu"
        android:padding="1dp"
        android:text="GPU:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tx_bat"
        android:padding="1dp"
        android:text="CPU:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ampe"
        android:padding="1dp"
        android:text="mA"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/mem"
        android:padding="1dp"
        android:text="Gb"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tx_ampe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="1dp"
        android:text="Ampe:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:text="Mem:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_memusedavail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="1dp"
        android:text="Used:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/memPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tx_mem"
        android:padding="1px"
        android:text="XX%"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tx_memusedavail"
        android:padding="1px"
        android:text="X.XX/X.XX"
        android:textColor="#000"
        android:textSize="2.5mm" />

    <TextView
        android:id="@+id/tx_bat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/bat"
        android:padding="1dp"
        android:text="Pin:"
        android:textColor="#000"
        android:textSize="2.5mm"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/c1"
        android:padding="1dp"
        android:text="°C"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="1dp"
        android:text="°C"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:text="°C"
        android:textColor="#000"
        android:textSize="15sp" />


</RelativeLayout>